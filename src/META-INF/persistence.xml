<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="gc" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>com.afpa59.gc.donnees.Article</class>
        <class>com.afpa59.gc.donnees.Client</class>
        <class>com.afpa59.gc.donnees.Commande</class> 
        <class>com.afpa59.gc.donnees.LigneCommande</class>   
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:hsql://localhost/gestionCommandesJpa"/>
            <property name="javax.persistence.jdbc.user" value="SA"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="eclipselink.ddl-generation" value="create-or-extend-tables" />
            <!-- <property name="eclipselink.ddl-generation" value="drop-and-create-tables" />-->
        </properties>
    </persistence-unit>
</persistence>